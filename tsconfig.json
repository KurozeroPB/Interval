{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "esnext",
            "dom"
        ],
        "declaration": true,
        "declarationDir": "./lib",
        "outDir": "./lib/",
        "strict": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "examples",
        "**/*.test.ts",
        "**/webpack.config.ts"
    ],
    "compilation": {
        "compiler": {
            "context": "./src",
            "outputPath": "./lib"
        }
    }
}
