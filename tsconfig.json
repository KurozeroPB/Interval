{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "esnext"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "sourceMap": false,
        "strict": true,
        "rootDir": "src",
        "outDir": "lib",
        "noEmit": true
    },
    "exclude": [
        "node_modules",
        "examples"
    ]
}
